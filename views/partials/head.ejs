    <div id="msg" style="background-color: lavender"></div>
     <script>
        var intervalListener = null;
        var clr = function(){
         $('#msg').fadeOut(function(){
          $('#msg').html("").show();
         })
         }
         
         var log = function(t){
          intervalListener = clearInterval(intervalListener)
          $('#msg').prepend(t+"<br>");
          intervalListener = setInterval(clr, 3000);
         }
</script>